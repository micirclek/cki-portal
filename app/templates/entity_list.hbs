<h2>{{title}}</h2>
<div class="panel-group">
{{#each entities}}
  <div class="panel panel-default">
    <div class="panel-heading js-toggle-panel">
      <h4 class="panel-title">
        <a href="#">{{name}}</a>
        {{#if currentMonthSubmitted}}
          <span class="label label-success" title="Report submitted">
        {{else}}{{#if currentMonthStarted}}
          <span class="label label-warning" title="Report started">
        {{else}}
          <span class="label label-danger" title="Report not started">
        {{/if}}{{/if}}
        {{date ../currentMonth "MMMM"}}</span>

        {{#if countTotal}}
          <small>
            {{countSubmitted}} report{{#if multipleSubmitted}}s{{/if}} submitted this year
            {{#if countInProgress}}
              ({{countInProgress}} in progress)
            {{/if}}
          </small>
        {{/if}}
      </h4>
    </div>
    <div class="panel-body panel-collapse collapse">
      <a href="#{{basePath}}/{{_id}}/home">View Club Page</a>
      {{#if years}}
        {{#each years}}
          <div class="row" style="margin-top: 5px;">
            <div class="col-md-2">{{year}}</div>
            <div class="col-md-10 btn-group">
              {{#each months}}
                <a href="#reports/{{_id}}" class="btn btn-sm
                  {{#if submitted}}
                  btn-success
                  {{else}}
                  btn-default
                  {{/if}}
                ">{{date dateFor "MMM"}}</a>
              {{/each}}
            </div>
          </div>
        {{/each}}
      {{else}}
        There are no reports at this time.
      {{/if}}
    </div>
  </div>
{{/each}}
</div>
