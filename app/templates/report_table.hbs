<table class="table table-hover form-inline">
  <thead>
    <tr>
      {{#each cols}}
        <th>{{.}}</th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
  </tbody>
  {{#unless disabled}}
    <tfoot>
      <tr class="text-center">
        <td colspan="{{numCols}}">
          <button type="button" class="btn btn-success js-add-row">Add Another Row</button>
        </td>
      </tr>
    </tfoot>
  {{/unless}}
</table>

